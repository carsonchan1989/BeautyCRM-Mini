.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  height: 160rpx;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.picker {
  width: 100%;
  height: 80rpx;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.btn-save {
  flex: 1;
  height: 80rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 30rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-cancel {
  flex: 1;
  height: 80rpx;
  background-color: #f2f2f2;
  color: #333;
  font-size: 30rpx;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.divider {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.divider-line {
  flex: 1;
  height: 1px;
  background-color: #e0e0e0;
}

.divider-text {
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #999;
}

.excel-upload {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.upload-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.upload-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.upload-actions {
  display: flex;
  margin-bottom: 20rpx;
}

.btn-upload {
  flex: 2;
  height: 80rpx;
  background-color: #1890ff;
  color: #fff;
  font-size: 28rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-template {
  flex: 1;
  height: 80rpx;
  background-color: #f2f2f2;
  color: #333;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-status {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  word-break: break-all;
}

.file-size {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.btn-preview {
  height: 70rpx;
  background-color: #13c2c2;
  color: #fff;
  font-size: 28rpx;
  align-self: flex-end;
  width: 200rpx;
}

.preview-data {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.preview-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.preview-table {
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.preview-header {
  display: flex;
  background-color: #f2f2f2;
  border-bottom: 1px solid #e0e0e0;
}

.header-item {
  flex: 1;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
}

.preview-body {
  max-height: 400rpx;
  overflow-y: auto;
}

.preview-row {
  display: flex;
  border-bottom: 1px solid #e0e0e0;
}

.preview-row:last-child {
  border-bottom: none;
}

.row-item {
  flex: 1;
  padding: 20rpx;
  font-size: 26rpx;
  color: #666;
  text-align: center;
  word-break: break-all;
}

.btn-import {
  width: 100%;
  height: 80rpx;
  background-color: #fa8c16;
  color: #fff;
  font-size: 30rpx;
  margin-top: 20rpx;
} 