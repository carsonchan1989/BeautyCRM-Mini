.container {
  padding: 0 0 20rpx 0;
  width: 100%;
  box-sizing: border-box;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 10;
}

.back-button {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.back-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  flex: 1;
  text-align: center;
  color: #333;
}

.add-button {
  font-size: 28rpx;
  color: #3a86ff;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  border: 1px solid #3a86ff;
}

.error-message {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15rpx 30rpx;
  background-color: #fff3f3;
  color: #e74c3c;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}

.error-message icon {
  margin-right: 10rpx;
}

.search-filter-bar {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  align-items: center;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
}

.search-box icon {
  margin-right: 10rpx;
}

.search-box input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
}

.filter-button {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 20rpx;
}

.filter-icon {
  margin-left: 10rpx;
  font-size: 24rpx;
}

.filter-panel {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
}

.filter-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  width: 150rpx;
}

.filter-value {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.filter-arrow {
  margin-left: 10rpx;
  font-size: 20rpx;
  color: #999;
}

.filter-actions {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}

.reset-button {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 35rpx;
}

.result-count {
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  color: #999;
}

.project-list {
  padding: 0 30rpx;
}

.project-item {
  display: flex;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.project-info {
  flex: 1;
  margin-right: 20rpx;
}

.project-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.project-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.project-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff5733;
}

.project-details {
  margin-top: 20rpx;
}

.project-detail-item {
  display: flex;
  margin-bottom: 10rpx;
}

.detail-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 10rpx;
  min-width: 70rpx;
}

.detail-value {
  font-size: 26rpx;
  color: #666;
}

.project-desc {
  margin-top: 15rpx;
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.project-actions {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.btn-edit, .btn-delete {
  margin: 10rpx 0;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  min-width: 100rpx;
  text-align: center;
}

.btn-edit {
  background-color: #3a86ff;
  color: #fff;
}

.btn-delete {
  background-color: #ff5733;
  color: #fff;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.empty-tip text {
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.empty-sub-tip {
  font-size: 26rpx;
  color: #bbb;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #3a86ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-state text {
  font-size: 28rpx;
  color: #999;
} 