.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-box {
  flex: 1;
  position: relative;
  margin-right: 20rpx;
}

.search-box input {
  width: 100%;
  height: 70rpx;
  padding: 0 70rpx 0 20rpx;
  border-radius: 35rpx;
  background-color: #f5f5f5;
  font-size: 28rpx;
  box-sizing: border-box;
}

.search-box icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
}

.filter-box {
  width: 200rpx;
}

.picker {
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  font-size: 28rpx;
  text-align: center;
  position: relative;
}

.arrow {
  font-size: 24rpx;
  margin-left: 10rpx;
  color: #999;
}

.project-list {
  margin-bottom: 120rpx;
}

.project-item {
  margin-bottom: 20rpx;
  padding: 24rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  border-left: 6rpx solid #1890ff;
  overflow: hidden;
}

.project-info {
  flex: 1;
  margin-bottom: 20rpx;
}

.project-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid #f0f0f0;
}

.project-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  max-width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.project-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.project-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.project-detail-item {
  display: flex;
  font-size: 26rpx;
  line-height: 1.5;
}

.detail-label {
  color: #999;
  margin-right: 10rpx;
}

.detail-value {
  color: #666;
  flex: 1;
}

.project-desc {
  font-size: 26rpx;
  color: #888;
  margin-top: 10rpx;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.project-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 10rpx;
  border-top: 1px solid #f5f5f5;
  padding-top: 20rpx;
}

.btn-edit, .btn-delete {
  min-width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
  font-size: 26rpx;
  padding: 0 30rpx;
}

.btn-edit {
  background-color: #1890ff;
  color: #fff;
}

.btn-delete {
  background-color: #ff4d4f;
  color: #fff;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
  color: #ccc;
}

.empty-tip text {
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.empty-sub-tip {
  font-size: 24rpx !important;
  color: #ccc;
}

.add-button {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  height: 80rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.4);
  font-size: 32rpx;
  font-weight: bold;
}

.add-button text:first-child {
  font-size: 40rpx;
  margin-right: 10rpx;
} 