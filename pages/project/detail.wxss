.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.project-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.category {
  font-size: 28rpx;
  color: #666;
  padding: 4rpx 16rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  display: inline-block;
}

.info-section {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.value.price {
  color: #ff4d4f;
}

.description-section,
.notes-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  padding-left: 16rpx;
  border-left: 4rpx solid #1890ff;
}

.description-content,
.notes-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  padding: 16rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.button-group {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  gap: 20rpx;
}

.btn-edit,
.btn-delete {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
}

.btn-edit {
  background: #1890ff;
  color: #fff;
}

.btn-delete {
  background: #ff4d4f;
  color: #fff;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  width: 100%;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid #3884ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #888;
  font-size: 28rpx;
}

/* 错误信息 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

.error-text {
  color: #e64340;
  font-size: 28rpx;
  text-align: center;
  margin: 20rpx 0;
}

.btn-retry {
  background-color: #3884ff;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  width: 100%;
}

.empty-text {
  color: #888;
  font-size: 28rpx;
  margin: 20rpx 0;
}

.btn-back {
  background-color: #3884ff;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
} 