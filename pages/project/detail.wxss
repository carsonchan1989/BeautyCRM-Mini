.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.project-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.category {
  font-size: 28rpx;
  color: #666;
  padding: 4rpx 16rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  display: inline-block;
}

.info-section {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.value.price {
  color: #ff4d4f;
}

.description-section,
.notes-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  padding-left: 16rpx;
  border-left: 4rpx solid #1890ff;
}

.description-content,
.notes-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  padding: 16rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.button-group {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  gap: 20rpx;
}

.btn-edit,
.btn-delete {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
}

.btn-edit {
  background: #1890ff;
  color: #fff;
}

.btn-delete {
  background: #ff4d4f;
  color: #fff;
} 