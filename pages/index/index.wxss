/* pages/index/index.wxss */

/* 主容器 */
.container {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部区域 */
.header {
  padding: 30rpx 0;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar-container {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
  border: 2rpx solid #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 100%;
  height: 100%;
}

.user-name {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.welcome {
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
}

/* 统计数据卡片 */
.stats-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.section-title text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.refresh-text {
  font-size: 24rpx;
  color: #2d8cf0;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.stats-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.stats-item:first-child {
  border-right: 1rpx solid #eee;
}

.stats-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #2d8cf0;
  display: block;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

.last-update {
  font-size: 22rpx;
  color: #999;
  text-align: right;
  display: block;
  margin-top: 10rpx;
}

/* 功能模块网格 */
.function-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx 0;
}

.function-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.function-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.function-label {
  font-size: 28rpx;
  color: #333;
}

/* 快捷操作 */
.quick-actions {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-list {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.action-item {
  text-align: center;
}

.action-icon {
  font-size: 36rpx;
  margin-bottom: 10rpx;
  display: block;
}

.action-label {
  font-size: 24rpx;
  color: #666;
}

/* 底部信息 */
.footer {
  text-align: center;
  padding: 30rpx 0;
}

.footer-text {
  font-size: 24rpx;
  color: #999;
}

/* 图标字体 */
@font-face {
  font-family: 'iconfont';
  src: url('data:font/woff2;charset=utf-8;base64,') format('woff2');
}

.iconfont {
  font-family: "iconfont" !important;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-user:before {
  content: "\e7ae";
}

.icon-chart:before {
  content: "\e61e";
}

.icon-file:before {
  content: "\e67e";
}

.icon-cloud-upload:before {
  content: "\e7d9";
}

.icon-user-add:before {
  content: "\e7b0";
}

.icon-excel:before {
  content: "\e7b8";
}

.icon-ai:before {
  content: "\e601";
}

/* 客户列表预览 */
.preview-card {
  background-color: #fff;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.preview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.preview-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.preview-more {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #10aeff;
}

.preview-more-icon {
  margin-left: 5rpx;
}

.customer-preview-list {
  margin-top: 10rpx;
}

.customer-preview-item {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.customer-preview-item:last-child {
  border-bottom: none;
}

.customer-preview-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #10aeff;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 15rpx;
}

.customer-preview-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.customer-preview-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.customer-preview-detail {
  font-size: 22rpx;
  color: #999;
}

.customer-preview-arrow {
  color: #ccc;
  font-size: 24rpx;
}

.version-info {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 40rpx;
}