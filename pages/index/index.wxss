/* pages/index/index.wxss */

/* 主容器 */
.container {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部区域 */
.header {
  padding: 30rpx 0;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 统计数据卡片 */
.stats-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.section-title text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.refresh-text {
  font-size: 24rpx;
  color: #2d8cf0;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.stats-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.stats-item:first-child {
  border-right: 1rpx solid #eee;
}

.stats-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #2d8cf0;
  display: block;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

.last-update {
  font-size: 22rpx;
  color: #999;
  text-align: right;
  display: block;
  margin-top: 10rpx;
}

/* 功能模块网格 */
.function-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx 0;
}

.function-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.function-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.function-label {
  font-size: 28rpx;
  color: #333;
}

/* 快捷操作 */
.quick-actions {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-list {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.action-item {
  text-align: center;
}

.action-icon {
  font-size: 36rpx;
  margin-bottom: 10rpx;
  display: block;
}

.action-label {
  font-size: 24rpx;
  color: #666;
}

/* 版本信息 */
.version-info {
  text-align: center;
  font-size: 22rpx;
  color: #999;
  margin-top: 30rpx;
  padding: 10rpx 0;
}
