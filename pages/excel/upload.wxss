/* pages/excel/upload.wxss */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.back-button {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.back-icon {
  font-size: 36rpx;
  margin-right: 6rpx;
}

.title {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  color: #333;
}

/* 上传区域样式 */
.upload-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.upload-box {
  border: 2rpx dashed #ccc;
  border-radius: 12rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  cursor: pointer;
  margin-bottom: 30rpx;
}

.upload-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.icon {
  font-size: 80rpx;
  color: #999;
}

.upload-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
}

/* 文件信息样式 */
.file-info {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
}

.value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

/* 状态框样式 */
.status-box {
  margin-bottom: 30rpx;
}

.status-text {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.error-message {
  font-size: 28rpx;
  color: #ff4d4f;
  display: block;
}

/* 按钮组样式 */
.button-group {
  display: flex;
  justify-content: space-between;
}

.preview-button, .import-button {
  width: 48%;
  font-size: 30rpx;
}

.preview-button {
  background-color: #fff;
  color: #1890ff;
  border: 1px solid #1890ff;
}

.import-button {
  background-color: #1890ff;
  color: #fff;
}

/* 禁用状态 */
.preview-button[disabled], .import-button[disabled] {
  opacity: 0.5;
}

/* 预览区域样式 */
.preview-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.preview-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.preview-tabs {
  display: flex;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.tab-item {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #1890ff;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -1rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 3rpx;
  background-color: #1890ff;
}

/* 表格样式 */
.table-container {
  width: 100%;
  overflow-x: auto;
  margin-bottom: 20rpx;
}

.table {
  min-width: 100%;
  border-collapse: collapse;
}

.table-header {
  display: flex;
  background-color: #f5f5f5;
  font-weight: bold;
}

.th {
  flex: 1;
  min-width: 180rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: #333;
  border: 1rpx solid #eee;
  text-align: center;
}

.table-body {
  max-height: 600rpx;
  overflow-y: auto;
}

.tr {
  display: flex;
}

.tr:nth-child(even) {
  background-color: #fafafa;
}

.td {
  flex: 1;
  min-width: 180rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: #666;
  border: 1rpx solid #eee;
  text-align: center;
  word-break: break-all;
}

.preview-note {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* 导入结果样式 */
.import-results {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.result-item {
  display: flex;
  margin-bottom: 10rpx;
}

.result-label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
}

.result-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}