/* service/list.wxss - 服务记录列表页样式 */

.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  background-color: #1aad19;
  color: white;
  padding: 12rpx 30rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 8rpx rgba(26, 173, 25, 0.2);
}

/* 搜索区域样式 */
.search-container {
  background-color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.search-item {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.search-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
}

.search-input {
  flex: 1;
  height: 70rpx;
  border: 1px solid #eee;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.date-picker {
  flex: 1;
  height: 70rpx;
  border: 1px solid #eee;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.placeholder {
  color: #999;
}

.clear-btn {
  margin-left: 20rpx;
  color: #999;
  font-size: 26rpx;
}

/* 客户下拉列表 */
.customer-dropdown {
  position: absolute;
  top: 100rpx;
  left: 160rpx;
  right: 20rpx;
  background-color: white;
  border: 1px solid #eee;
  border-radius: 6rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
  max-height: 400rpx;
  overflow-y: auto;
}

.dropdown-item {
  padding: 20rpx;
  border-bottom: 1px solid #f0f0f0;
  font-size: 26rpx;
}

.dropdown-item:last-child {
  border-bottom: none;
}

/* 服务记录列表样式 */
.service-list {
  margin-bottom: 30rpx;
}

.service-item {
  background-color: white;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  position: relative;
  border-left: 8rpx solid #1aad19;
}

.service-header {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-bottom: 1px solid #eee;
}

.service-date {
  font-size: 26rpx;
  color: #666;
}

.customer-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.service-content {
  padding: 20rpx;
}

.service-details {
  margin-bottom: 15rpx;
}

.service-projects {
  display: flex;
  flex-wrap: wrap;
}

.project {
  background-color: #f0f9eb;
  color: #67c23a;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 10rpx;
}

.no-projects {
  font-size: 26rpx;
  color: #999;
  font-style: italic;
}

.service-info {
  display: flex;
  flex-wrap: wrap;
}

.info-item {
  margin-right: 30rpx;
  margin-bottom: 10rpx;
  font-size: 26rpx;
}

.label {
  color: #666;
  margin-right: 8rpx;
}

.value {
  color: #333;
  font-weight: bold;
}

.service-action {
  display: flex;
  justify-content: flex-end;
  padding: 15rpx 20rpx;
  border-top: 1px solid #f0f0f0;
  background-color: #fafafa;
}

.action-btn {
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
  margin-left: 15rpx;
}

.edit {
  background-color: #e6f7ff;
  color: #1890ff;
  border: 1px solid #91d5ff;
}

.delete {
  background-color: #fff1f0;
  color: #f5222d;
  border: 1px solid #ffa39e;
}

/* 空状态样式 */
.empty-container {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.empty-tips {
  font-size: 26rpx;
  color: #bbb;
}

/* 加载中样式 */
.loading-container {
  padding: 30rpx;
  display: flex;
  justify-content: center;
}

.loading {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1aad19;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 分页控制样式 */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}

.page-btn {
  background-color: #1aad19;
  color: white;
  padding: 10rpx 30rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
  margin: 0 20rpx;
}

.disabled {
  background-color: #ccc;
  cursor: not-allowed;
}

.page-info {
  font-size: 26rpx;
  color: #666;
}