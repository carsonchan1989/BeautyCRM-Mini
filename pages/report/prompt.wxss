/* pages/report/prompt.wxss */

/* 主容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 标题栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.back-button {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #10aeff;
}

.back-icon {
  margin-right: 5rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
}

/* 错误信息 */
.error-message {
  background-color: #ffebeb;
  color: #e64340;
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
}

.error-message icon {
  margin-right: 10rpx;
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: #999;
}

/* 内容区域 */
.content {
  display: flex;
  flex: 1;
  overflow: hidden;
}

/* 文件列表 */
.file-list {
  width: 300rpx;
  background-color: #fff;
  border-right: 1rpx solid #eee;
  overflow-y: auto;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.no-files {
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
}

.tip {
  font-size: 24rpx;
  margin-top: 10rpx;
}

.file-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
  transition: background-color 0.3s;
}

.file-item.active {
  background-color: #f0f9ff;
  border-left: 4rpx solid #10aeff;
}

.file-name {
  font-size: 26rpx;
  color: #333;
  word-break: break-all;
  margin-bottom: 10rpx;
}

.file-actions {
  display: flex;
  justify-content: flex-end;
}

.action {
  font-size: 24rpx;
  color: #10aeff;
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
}

/* 文件内容 */
.file-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background-color: #fff;
  margin: 0 20rpx;
  border-radius: 8rpx;
}

.content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.content-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.content-action {
  font-size: 24rpx;
  color: #10aeff;
  padding: 4rpx 15rpx;
  border: 1rpx solid #10aeff;
  border-radius: 30rpx;
}

.content-body {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.markdown-content {
  white-space: pre-wrap;
  word-break: break-all;
  font-size: 26rpx;
  line-height: 1.6;
  color: #333;
}

/* 占位提示 */
.placeholder {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  background-color: #fff;
  margin: 0 20rpx;
  border-radius: 8rpx;
}