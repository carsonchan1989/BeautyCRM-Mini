/* pages/test/apiTest.wxss */
.container {
  padding: 20rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 标题栏 */
.header {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 30rpx;
}

.back-button {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #10aeff;
}

.back-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
}

/* 配置区域 */
.config-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.form-item {
  margin-bottom: 20rpx;
}

.item-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.item-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.correct-model {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #f0f9ff;
  border-radius: 8rpx;
  border-left: 6rpx solid #10aeff;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.correct-model-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.correct-model-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  flex: 1;
  word-break: break-all;
}

.copy-button {
  font-size: 24rpx;
  color: #10aeff;
  background-color: #e6f4ff;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  margin-left: 20rpx;
}

/* 操作按钮区 */
.action-section {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.action-button {
  width: 48%;
  margin-bottom: 20rpx;
  background-color: #fff;
  color: #333;
  font-size: 28rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.action-button.primary {
  width: 100%;
  background-color: #10aeff;
  color: #fff;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 40rpx 0;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #10aeff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 结果区域 */
.result-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.result-content {
  padding: 20rpx;
  border-radius: 8rpx;
  margin-top: 10rpx;
}

.result-content.success {
  background-color: #f0fff0;
  border-left: 6rpx solid #52c41a;
}

.result-content.error {
  background-color: #fff0f0;
  border-left: 6rpx solid #ff4d4f;
}

.result-status {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.result-message {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  word-wrap: break-word;
}

.result-details {
  font-size: 26rpx;
  color: #999;
  margin-top: 20rpx;
  border-top: 1rpx dashed #eee;
  padding-top: 20rpx;
}

.response-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.response-content {
  font-size: 26rpx;
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
  white-space: pre-wrap;
  word-wrap: break-word;
}

.small-text {
  font-size: 24rpx;
  color: #999;
}

/* 模型列表样式 */
.models-section {
  max-height: 600rpx;
}

.models-list {
  max-height: 400rpx;
}

.model-list {
  max-height: 200rpx;
  overflow-y: auto;
}

.model-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
}

.model-name {
  font-weight: bold;
  color: #333;
}

.model-extra {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

/* 日志记录 */
.logs-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.logs-list {
  max-height: 400rpx;
}

.log-item {
  padding: 10rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 24rpx;
}

.log-time {
  color: #999;
}

.log-level {
  display: inline-block;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  margin: 0 10rpx;
}

.log-level.info {
  background-color: #e6f7ff;
  color: #1890ff;
}

.log-level.warn {
  background-color: #fff7e6;
  color: #fa8c16;
}

.log-level.error {
  background-color: #fff1f0;
  color: #f5222d;
}

.log-message {
  color: #333;
  display: inline-block;
}

.log-data {
  color: #666;
  background-color: #f9f9f9;
  padding: 10rpx;
  margin-top: 6rpx;
  border-radius: 4rpx;
  font-family: monospace;
  font-size: 22rpx;
  white-space: pre-wrap;
  word-wrap: break-word;
}